<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="product.template.product.form_inherited_cap" model="ir.ui.view">
        <field name="name">product.template.product.form.inherited.cap</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]" position="inside">
            <page name="tracking_tab" string="Tracking">
              <group name="tracking_group">
                <field name="product_history">
                  <tree string="Product History" default_order="modified_datetime desc">
                    <field name="modified_datetime"/>
                    <field name="user"/>
                    <field name="previous_list_price" widget="char"/>
                    <field name="list_price" widget="char"/>
                    <field name="previous_standard_price" widget="char"/>
                    <field name="standard_price" widget="char"/>
                  </tree>
                </field>
              </group>
            </page>
          </xpath>
        </field>
    </record>

    <record id="product.product.form_inherited_cap" model="ir.ui.view">
        <field name="name">product.product.form.inherited.cap</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page name="tracking_tab" string="Tracking">
              <group name="tracking_group">
                <field name="product_history">
                  <tree string="Product History" default_order="modified_datetime desc">
                    <field name="modified_datetime"/>
                    <field name="user"/>
                    <field name="previous_list_price" widget="char"/>
                    <field name="list_price" widget="char"/>
                    <field name="previous_standard_price" widget="char"/>
                    <field name="standard_price" widget="char"/>
                  </tree>
                </field>
              </group>
            </page>
          </xpath>
        </field>
    </record>

    
