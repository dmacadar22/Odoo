<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_extends" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="inside">
         	 	<h2>Sales Price History</h2>
	       	 	<div class="row mt16 o_settings_container">
	                   <div class="col-xs-12 col-md-6 o_setting_box">
	                   		<div>
	                       	</div>
	                       <div class="o_setting_right_pane">
	                           <label for="item_limit"/>
	                           <div class="text-muted">
	                               Number of items display in product sale price history
	                           </div>
	                           <div class="mt16">
	                               <field name="item_limit"/>
	                           </div>
	                       </div>
	                   </div>
	                   <div class="col-xs-12 col-md-6 o_setting_box">
	                       <div class="o_setting_left_pane">
	                       </div>
	                       <div class="o_setting_right_pane">
	                           <label for="price_history"/>
	                           <div class="text-muted">
	                            	Sale Order product price history based on
	                           </div>
	                           <div class="mt16">
	                              	<field name="price_history" class="o_light_label" widget="radio" options="{'horizontal': true}"/>
	                           </div>
	                       </div>
	                  	</div>
	                  </div>
            </xpath>
        </field>
    </record>

</odoo>
 